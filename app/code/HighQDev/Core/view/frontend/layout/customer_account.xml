<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                   name="customer-account-navigation-add-comment-link" after="-">
                <arguments>
                    <argument name="path" xsi:type="string">demo/demo/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Add Comments</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                   name="customer-account-navigation-view-comment-link" after="-">
                <arguments>
                    <argument name="path" xsi:type="string">demo/comments/view</argument>
                    <argument name="label" xsi:type="string" translate="true">View Comments</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

